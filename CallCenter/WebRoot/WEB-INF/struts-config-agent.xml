<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
  <form-beans> 
  	<form-bean name="loginForm" type="com.callcenter.form.LoginForm" />
  </form-beans>
  <global-exceptions />
  <global-forwards />
  <action-mappings>
  
  <!--################################     Login     #################################-->
   <action
      attribute="loginForm"
      input="/mindex.jsp"
      name="loginForm"
      path="/login"
      scope="request"
      type="com.callcenter.action.LoginAction" >
      
      <forward name="error" path="/mindex.jsp" />
      <forward name="success" path="/Home_Login.jsp" />
      <forward name="register" path="/RegisterNew.jsp" />
    </action>
  <!--################################     Login     #################################-->
  
  </action-mappings>
  
  <message-resources key="agentResources" parameter="com.callcenter.struts.AgentResources" />
</struts-config>

